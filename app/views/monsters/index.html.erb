<div class="container">
  <h1>Welcome to Monster Rental</h1>

  <%= link_to 'Add Monster', new_monster_path %>

  <% @monsters.each do |monster| %>
  <div class="container" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path monster.photo.key, height: 300, width: 400, crop: :fit %>')">

  <h1><%= monster.name %></h1>


<%= link_to 'View this Monster', monster_path(monster), class: 'btn btn-primary' %>
</div>
<% end %>

</div>
