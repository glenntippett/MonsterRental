<div class="card-monster" style="text-align: center;margin:0 auto; width: 500px;  margin-top: 50px; background-color: #f1ebf5;">

  <div class="image" style="margin:0 ; background-color :rgba(255,255,255,0.7); background-blend-mode:lighten; background-image: url('<%= cl_image_path @monster.photo.key, height: 300, width: 400, crop: :fit %>')"><%= cl_image_tag @monster.photo.key, height: 300, width: 300, crop: :fill %>

  </div>
   <h2 style="text-align:right; color:#6930c3; margin-right: 30px;">
    <% if @monster.reviews.length.positive? %>
    ★
    <% end %>
    <%= @monster.avarage_rating %></h2>

  <div class="card-monster-infos" style="margin-top:10px; margin-bottom: 50px;">
    <div>

      <h2 style="text-align: center;"><%=@monster.name %></h2>
      <p><%=@monster.description%></p>
    </div>
    <h2 class="card-monster-pricing">$<%= @monster.price %></h2>
  </div>
  <div class="d-flex justify-content-between ml-2">
    <i class="fas fa-arrow-left"><%= link_to "Back", monsters_path %></i>

     <%= link_to "Book monster", new_monster_booking_path(@monster), class: "btn btn-success", style:"border-radius:25px;"%>
     <div></div>


</div>
    <div class="show-review" style="text-align: left; margin:20px;">
      <% if @monster.reviews.length.positive? %>
      <i class="fas fa-comment" style="color:#1a508b;">  Reviews</i>
      <% end %>

        <% @monster.reviews.each do |review|%>
           <div class="card" style="border-color: #719fb0; padding:10px; border-radius:10px;">
         <p>★<%= review.rating %>
          <%= review.content %>
         </p>

        </div>
         <% end %>

    </div>
</div>

