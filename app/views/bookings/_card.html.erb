       <% elsif @completed_bookings.include?(booking) && booking.review.nil? %>
       <p><%= link_to 'Leave a review', '#', class: 'text-white booking-card-name' %></p>
       <% else %>
       <p> Your rating: <%=booking.review.rating%></p>
       <p><%= link_to "Read your review", "#" %></p>
        <% end %>


     </div>
    </div>
  </div>
<% end %>
